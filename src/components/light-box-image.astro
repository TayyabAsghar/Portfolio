---
import { Picture } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  gradient: string;
  className?: string;
  noBorder?: boolean;
  outline?: boolean;
}

const { src, alt, className, noBorder, outline, gradient } = Astro.props;

const borderStyle = !noBorder
  ? "lg:ring-2 ring-slate-100 lg:p-3 dark:ring-slate-700"
  : "";

const outlineStyle = outline
  ? "ring-2 ring-slate-100 !p-0 dark:ring-slate-700"
  : "";
---

<figure
  class="text-center text-xs rounded-lg md:rounded-2xl lg:rounded-3xl lg:-mx-32"
  class:list={[gradient]}
>
  <Picture
    src={src}
    formats={["avif", "webp", "jpg"]}
    alt={alt}
    width="1920"
    height="1080"
    class="scale-90 relative top-6"
    class:list={[borderStyle, outlineStyle, className]}
  />
  <figcaption>
    <slot />
  </figcaption>
</figure>
